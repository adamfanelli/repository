<Window x:Class="Timeline_Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:TimelineProject="clr-namespace:Timeline_Project"
        xmlns:local="clr-namespace:Timeline_Project"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Closing="Window_Closing"
        Title="MainWindow" Height="800" Width="1200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0"  Width="Auto">
            <Menu DockPanel.Dock="Top" Background="White">
                <MenuItem Header="File">
                    <MenuItem Header="New" />
                    <MenuItem Header="Open" />
                    <MenuItem Header="Save" />
                    <Separator />
                    <MenuItem Header="Exit" />
                </MenuItem>

                <MenuItem Header="Edit">
                    <MenuItem Header="Copy" />
                    <MenuItem Header="Paste" />
                    <MenuItem Header="Options" />
                </MenuItem>

                <MenuItem Header="View">
                    <MenuItem Header="Themes" />
                    <MenuItem Header="Preferences" />
                </MenuItem>
            </Menu>
        </DockPanel>

        <WindowsFormsHost Grid.Row="1">
            <WindowsFormsHost.Child>
                <TimelineProject:SfmlDrawingSurface 
                    x:Name="DrawSurface" 
                    SizeChanged="DrawSurface_SizeChanged" 
                    KeyDown="DrawSurface_KeyDown"
                    KeyUp="DrawSurface_KeyUp"
                    />
            </WindowsFormsHost.Child>
        </WindowsFormsHost>

        <Button Grid.Row="2" Click="Button_Click" Content="Random Color" Width="85" HorizontalAlignment="Left" Margin="4" />
        <Button Grid.Row="2" Click="Button_Click_New_Event" Content="New Event" Width="70" HorizontalAlignment="Left" Margin="94, 4, 4, 4" />
    </Grid>
</Window>
