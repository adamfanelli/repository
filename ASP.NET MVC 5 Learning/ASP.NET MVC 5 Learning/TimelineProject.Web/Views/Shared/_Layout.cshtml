<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Timeline Project</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body style="background-color: ghostwhite">

    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Timeline Project", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>

            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>

                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="">
                            Articles
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu" role="menu">
                            <li style="margin-bottom: 8px; margin-top: 8px;">@Html.ActionLink("All Articles", "Index", "Articles")</listyle="padding:>
                            <li>@Html.ActionLink("Characters", "Index", "Articles")</li>
                            <li>@Html.ActionLink("World", "Index", "Articles")</li>
                            <li>@Html.ActionLink("Events", "Index", "Articles")</li>
                            <li>@Html.ActionLink("Plot", "Index", "Articles")</li>
                        </ul>
                    </li>

                    <li>@Html.ActionLink("Timeline", "Index", "Timeline")</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content"  style="background-color: white">
        @RenderBody()
        <hr />
        <footer>
            <p>Timeline Project - v0.0.1</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>


