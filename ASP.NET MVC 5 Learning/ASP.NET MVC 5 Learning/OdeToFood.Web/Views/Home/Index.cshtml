@model OdeToFood.Data.Services.InMemoryRestaurantData
@{
    ViewBag.Title = "Home Page";
}


<div class="jumbotron">
    <h1>Home Page</h1>

    <table class="table table-striped table-bordered">
        <caption>List of restaurants in the database</caption>
        <tr>
            <th colspan="@Model.numColumns" class="bg-primary">There are @Model.GetAll().Count() restaurants in the database.</th>
        </tr>

        @for (int i = 0; i < Math.Ceiling((Model.GetAll().Count() / (double)@Model.numColumns)); i++)
        {
        <tr>
            @for (int j = 0; j <= @Model.numColumns - 1; j++)
            {
                if ((i * @Model.numColumns) + j < Model.GetAll().Count())
                {
                    <td class="table-responsive table-hover">@Model.GetAll().ElementAt((i * @Model.numColumns) + j).Name</td>
                }
                else
                {
                    <td class="table-responsive table-hover"></td>
                }
            }
        </tr>
        }
    </table>

    <p><a href="https://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

